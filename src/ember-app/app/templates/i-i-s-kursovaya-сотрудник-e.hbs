<h3 class="ui header">{{t "forms.i-i-s-kursovaya-сотрудник-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya-сотрудник-e.фИО-caption")
      data-test-i-i-s-kursovaya-сотрудник-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.телефон
      class=(if (v-get validationModel "телефон" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya-сотрудник-e.телефон-caption")
      data-test-i-i-s-kursovaya-сотрудник-e-телефон=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "телефон" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-сотрудник-e.должности-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.должности
      displayAttributeName="должность"
      autocomplete=true
      relationName="должности"
      projection="ДолжностиL"
      title=(t "forms.i-i-s-kursovaya-сотрудник-e.должности-caption")
      readonly=readonly
      componentName="должностиLookup"
      class=(if (v-get validationModel "должности" "isInvalid") "error")
      data-test-i-i-s-kursovaya-сотрудник-e-должности=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "должности" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-сотрудник-e.карта-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.карта
      displayAttributeName="кодКарты"
      autocomplete=true
      relationName="карта"
      projection="КартаL"
      title=(t "forms.i-i-s-kursovaya-сотрудник-e.карта-caption")
      readonly=readonly
      componentName="картаLookup"
      class=(if (v-get validationModel "карта" "isInvalid") "error")
      data-test-i-i-s-kursovaya-сотрудник-e-карта=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "карта" "message")}}
  </div>
  <div class="field" data-test-i-i-s-kursovaya-сотрудник-e-карта-типКарты="true">
    <label>{{t "forms.i-i-s-kursovaya-сотрудник-e.карта.типКарты-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-kursovaya-вид-карты")
      value=model.карта.типКарты
      class=(if (v-get validationModel.карта "типКарты" "isInvalid") "error")
      readonly=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.карта "типКарты" "message")}}
  </div>
</form>
